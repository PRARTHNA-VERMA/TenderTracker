<script>
    document.querySelector('.custom-file-input').addEventListener('change', function (e) {
        const fileName = e.target.files[0]?.name; // Get selected file name
        if (fileName) {
            e.target.nextElementSibling.textContent = fileName; // Update label text
            document.getElementById('fileName').textContent = `Selected file: ${fileName}`;
        } else {
            document.getElementById('fileName').textContent = 'No file selected.';
        }
    });
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        // Reset StateDropdown on page load
        $('#StateDropdown').val(''); // Clear selected option

        // When the state dropdown changes
        $('#StateDropdown').change(function () {
            var stateId = $(this).val();
            console.log(stateId);
            // Clear the city dropdown
            $('#CityDropdown').empty();

            if (stateId !== '') {
                $.ajax({
                    url: '@Url.Action("GetCities", "Dashboard")',
                    type: 'GET',
                    data: { stateId: stateId },
                    success: function (cities) {

                        console.log(cities);    // Log cities data
                        $('#CityDropdown').empty().append('<option value="">Select City</option>');; // Clear previous options
                        // Populate the city dropdown with options
                        //console.log($('#CityDropdown'));
                        $.each(cities, function (i, city) {
                            //console.log(city.cityId + ' ' + city.cityName); // Log city data
                            $('#CityDropdown').append($('<option>', {
                                value: city.cityId,
                                text: city.cityName
                            }));
                        });
                    },
                    error: function (err) {
                        alert('Error loading cities: ' + err);
                    }
                });
            }
        });

        // Year validation for Pre-Bid Date
        $('form').change(function () {
            const year = new Date($('#Date').val()).getFullYear();
            if (year.toString().length > 4) {
                alert("Year must be a 4-digit number.");
                return false;
            }
            return true;
        });

        // Year validation for Tender Due Date
        $('form').change(function () {
            const year = new Date($('#TDueDate').val()).getFullYear();
            if (year.toString().length > 4) {
                alert("Year must be a 4-digit number.");
                return false;
            }
            return true;
        });
    });
</script>
<script>
    document.getElementById("exampleInputFile").addEventListener("change", function () {
        const fileInput = this;
        const fileName = fileInput.files[0]?.name;
        const allowedExtensions = /\.pdf$/i;

        if (fileName) {
            if (!allowedExtensions.exec(fileName)) {
                    alert("Only PDF format is allowed in this field.");
                fileInput.value = ""; // Clear the file input
                return;
            }
            fileInput.nextElementSibling.textContent = fileName; // Update label text
        }
    });
</script>


