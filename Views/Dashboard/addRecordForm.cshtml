<script>
    document.getElementById("exampleInputFile").addEventListener("change", function () {
        const fileInput = this;
        const fileName = fileInput.files[0]?.name;
        const allowedExtensions = /\.pdf$/i;

        if (fileName) {
            if (!allowedExtensions.exec(fileName)) {
                    alert("Only PDF format is allowed in this field.");
                fileInput.value = ""; // Clear the file input
                return;
            }
            fileInput.nextElementSibling.textContent = fileName; // Update label text
        }
    });
</script>

<script>
       document.getElementById('TDueDate').addEventListener('change', function () {
        const preBidDate = document.getElementById('PreBidDate').value;
        const tenderDueDate = this.value;

        if (preBidDate && tenderDueDate) {
            const preBid = new Date(preBidDate);
            const tenderDue = new Date(tenderDueDate);

            if (tenderDue < preBid) {
                alert("Tender Due Date cannot be before Pre-Bid Date.");
                this.value = '';  // Clear the invalid date
            }
        }
    });
</script>
